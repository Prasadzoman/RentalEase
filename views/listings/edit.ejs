<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data"
                    novalidate class="needs-validation">
                    <input type="hidden" name="_method" value="PUT">
                    <br><br>
                    <div class="mb-3">
                        <label for="Title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Enter the title"
                            value="<%= listing.title %>" class="form-control" required>
                    </div>
                    <h3>Original Image</h3><br>
                    <img src="<%= og_image_url %>" alt=""><br>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Upload</label>
                        <input name="listing[image]" type="file" placeholder="Enter image url" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" placeholder="Enter description"
                            required><%= listing.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" type="number" placeholder="Enter price"
                            value="<%= listing.price %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" name="listing[location]" placeholder="Enter location"
                            value="<%= listing.location %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="Enter country"
                            value="<%= listing.country %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Categories</label>
                        <div class="d-flex flex-wrap gap-2">
                            <% const allCategories=[ 'trending' , 'pool' , 'fort' , 'igloo' , 'farm' , 'camping'
                                , 'boat' , 'artic' , 'mountain' , 'treehouse' , 'house' , 'beach' , 'city' ]; %>

                                <% for (let cat of allCategories) { %>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" name="category" value="<%= cat %>" 
  <%= (listing.category || []).includes(cat) ? "checked" : "" %>>


                                        <label class="form-check-label" for="category-<%= cat %>">
                                            <%= cat %>
                                        </label>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                    <br><br>
                    <button type="submit" class="btn btn-dark edit-btn">Update</button>
                    <br><br>
                </form>
            </div>
        </div>
        <script src="/js/script.js"></script>
    </body>

    </html>